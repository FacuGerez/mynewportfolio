---
import Bentoindiv from "./Bentoindiv.astro";
---

<div class="home__bento">
	<Bentoindiv title="Proyectos" gridarea="bento1">

	</Bentoindiv>
	<Bentoindiv title="Experiencia" gridarea="bento2">

	</Bentoindiv>
	<Bentoindiv title="About me" gridarea="bento3">

	</Bentoindiv>
	<Bentoindiv title="Contactame" gridarea="bento4">

	</Bentoindiv>
</div>

<style>
    .home__bento {
		display: grid;
		grid-template-columns: 2fr 1fr;
		grid-template-rows: 2fr 1fr 1fr;
		height: 100%;
		width: 100%;
		gap: 4px;
	}
	.bento1 {
		grid-column: 1/2;
        grid-row: 1/2;
	}
	.bento2 {
		grid-row: 1/3;
        grid-column: 2/3;
	}
	.bento3 {
		grid-row: 2/4;
        grid-column: 1/2;
	}
	.bento4 {
		grid-row: 3/4;
        grid-column: 2/3;
	}
</style>
