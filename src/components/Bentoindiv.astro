---
interface BentoindivProps {
    title: string;
    gridarea: string;
}
const { title, gridarea } = Astro.props;
---

<article class={gridarea}>
    <span>{title}</span>
    <slot />
</article>
<style>
    article {
        border: 1px solid #ccc;
        border-radius: 1rem;
        padding: 1rem;
        backdrop-filter: blur(99px);
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
    }
    span {
        display: flex;
        justify-content: center;
        align-items: center;
        border: 1px solid #ccc;
        border-radius: 3rem;
        backdrop-filter: blur(99px);
        height: 32px;
        width: min-content;
        padding: 1rem;
        text-wrap: nowrap;
        background-color: rgba(0,0,0,0.1);
    }
</style>
