---
interface Props {
    href?: string;
}
const { href } = Astro.props;
---

<a href={href ? href : "/#"}>
	<slot/>
</a>

<style>
    a {
        background-color: rgba(0, 0, 0, 0.288);
        border: 1px solid white;
        border-radius: 100%;
        max-width: 100%;
        max-height: 90%;
        display: flex;
        justify-content: initial;
        align-items: center;
        margin: 10px;
        padding: 10px;
    }
</style>
