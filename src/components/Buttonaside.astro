---
interface Props {
    src: string;
    alt: string;
    text: string;
}
const { src, alt, text } = Astro.props;
---

<button>
    <img src={src} alt={alt} />
	<h1>{text}</h1>
</button>

<style>
    button {
        background-color: rgba(0, 0, 0, 0.288);
        border: none;
        border-radius: 5px;
        color: black;
        text-decoration: none;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        width: calc(100% - 10px);
        max-height: auto;
        display: flex;
        flex-direction: row;
        justify-content: initial;
        align-items: center;
        gap: 2px;
        margin: 5px;
        padding: 5px;
    }
    img {
        max-width: auto;
        max-height: auto;
        margin: 0 0 0 10px;
    }
    h1 {
        font-size: 16px;
        color: black;
        margin: 0;
        padding: 0;
    }
</style>
