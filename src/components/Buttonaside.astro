---
interface Props {
    src: string;
    alt: string;
    href?: string;
}
const { src, alt, href } = Astro.props;
---

<a href={href ? href : "/#"}>
    <img src={src} alt={alt} />
	<slot/>
</a>

<style>
    a {
        background-color: rgba(0, 0, 0, 0.288);
        border: 1px solid white;
        border-radius: 100%;
        max-width: 100%;
        max-height: 90%;
        display: flex;
        justify-content: initial;
        align-items: center;
        margin: 10px;
        padding: 10px;
    }
    img {
        max-width: 40px;
        aspect-ratio: 1/1;
    }
</style>
