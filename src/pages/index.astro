---
import Layout from '../layouts/Layout.astro';
import GridBento from '../components/GridBento.astro';
---

<Layout title="Portfolio Facundo Gerez" description=''>
	<main class="home">
		<div class="home__content">
			<img class="home__logo" src="hogar.png" alt="logo de Facu" />
			<h1 class="home__title"><b>Facundo Gerez</b></h1>
			<p class="home__description">Astro is a new kind of static site builder that delivers
				lightning-fast performance with a modern developer experience.</p>
		</div>
		<GridBento />
	</main>
</Layout>

<style>
	.home{
		display: grid;
		min-height: 100vh;
		grid-template-rows: auto 1fr;
		padding: 10vh 20vw 5vh 20vw;
		gap: 6rem;
	}
	.home__content {
		gap: 1px;
	}
	.home__logo {
		width: 50px;
		height: 50px;
	}
</style>
