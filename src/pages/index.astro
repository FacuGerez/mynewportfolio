<style>
	.home{
		position: relative;
		display: flex;
		width: 100%;
		height: 100vh;
		background: rgb(53,0,90);
		background: linear-gradient(45deg, rgba(53,0,90,1) 0%, rgba(0,0,0,1) 25%, rgba(21,0,36,1) 75%, rgba(53,0,90,1) 100%);
